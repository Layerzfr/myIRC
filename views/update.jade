extends layout

block content
    .video
        video(autoplay, muted, loop, id="myVideo")
            source(src="/video/video.mp4", type="video/mp4")
    .container
        form.form-signin(role='form', action='/users', method='post')
            h2.title.form-signin-heading Modifier mon profil
            label.title Email
                input.form-control(type='email', name="email", placeholder="Your email", value="#{email}")
            label.title Username
                input.form-control(type='text', name="username", placeholder='Your Username', value="#{username}")
            button.btn.btn-lg.btn-primary.btn-block(type='submit') UPDATE